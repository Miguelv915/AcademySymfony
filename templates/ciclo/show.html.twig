{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Categoria' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'ciclo_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
        {{ table.tbl_tr('Padre',ciclo.parent) }}
        {{ table.tbl_tr('Nombre',ciclo.name) }}
        {{ table.tbl_tr('Alias',ciclo.alias) }}
        {{ table.tbl_tr('Valor',ciclo.value) }}
        {% include 'crud/_show_info.html.twig' with {'entity': ciclo} %}
    {{ table.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'ciclo','entity': ciclo} %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'ciclo','entity': ciclo} %}
{% endblock %}
