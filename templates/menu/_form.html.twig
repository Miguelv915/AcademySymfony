{% import 'macro/action.html.twig' as action %}

{{ action.frm_start(form) }}
    {{ action.frm_column(
        action.frm_column_field_select(form.parent),
        null,
        null,
        null,
        2
    ) }}
    {{ action.frm_column(
        action.frm_column_field(form.name),
        action.frm_column_field_select(form.route)
    ) }}
    {{ action.frm_column(
        action.frm_column_field(form.rank),
        action.frm_column_field(form.icon)
    ) }}
    {{ action.frm_column(
        action.frm_column_field(form.badge),
        null,
        null,
        null,
        2
    ) }}
    {{ action.frm_column(
        action.frm_column_btn(button_label|default('Guardar')),
        null,
        null,
        null,
        2
    ) }}
{{ action.frm_end(form) }}