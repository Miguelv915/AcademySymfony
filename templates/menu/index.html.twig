{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}
{% import 'macro/pagination.html.twig' as pagination %}

{% set _title = 'Menu' %}
{% set _main_title = 'Listado' %}
{% set _section =  'menu_index' %}

{% block _breadcrumb %}
    {{ breadcrumb.show(_title) }}
{% endblock %}

{% block _main %}
    <div class="table-responsive">
        {{ action.tbl_start() }}
        {{ action.thead_start() }}
        <tr>
            {{ action.th('Padre', true) }}
            {{ action.th('Nombre', true) }}
            {{ action.th('Ruta', true) }}
            {{ action.th('Icono', true) }}
            {{ action.th('Insignia', true) }}
            {{ action.th('Orden', true) }}
            {{ action.th('Activo', true, 'text-center') }}
            <th></th>
        </tr>
        {{ action.thead_end() }}
        {{ action.tbody_start() }}
        {% for menu in paginator.results %}
            <tr>
                <td>{{ menu.parent}}</td>
                <td>{{ menu.name }}</td>
                <td>{{ menu.route }}</td>
                <td><i class="{{ menu.icon }}"></i> {{ menu.icon }}</td>
                <td>{{ menu.badge }}</td>
                <td>{{ menu.ranking }}</td>
                <td class="text-center">{{ menu.activo | yesno_custom | raw }}</td>
                <td>
                    {% if access.has('show', menu) %}
                        {{ action.btn_show_link2_ico(path('menu_show', {'id': menu.id})) }}
                    {% endif %}
                    {% if access.has('edit', menu) %}
                        {{ action.btn_edit_link2_ico(path('menu_edit', {'id': menu.id})) }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay registros</td>
            </tr>
        {% endfor %}
        {{ action.tbody_end() }}
        {{ action.tbl_end() }}
    </div>

    {{ pagination.show(paginator, _section) }}
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_index_links.html.twig' with {'route_base': 'menu'} %}
{% endblock%}

{% block _main_options %}
    {% include 'crud/_index_filter.html.twig' %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_index_links_tool.html.twig' with {'route_base': 'menu'}  %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_index_links_ico.html.twig' with {'route_base': 'menu'}  %}
{% endblock %}

{% block _stylesheets %}
{% endblock %}

{% block _javascripts %}
    <script>
        jQuery(document).ready(function () {
            $(document).on('change', '#filter_size', function () {
                let route = '{{ path('menu_index') }}';
                route = route + "?" + 'n=' + $('#filter_size option:selected').val();
                route = route + "&" + 'b=' + $('#filter_text').val();
                window.location = route;
            });

            $(document).on('click', '.btn-send', function () {
                window.location = '{{ path('menu_index') }}';
            });

            $(document).on('click', '.btn-clean', function () {
                window.location.href = '{{ path('menu_index') }}';
            });
        });
    </script>
{% endblock %}