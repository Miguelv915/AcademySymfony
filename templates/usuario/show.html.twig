{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}

{% set _title = 'Usuarios' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'usuario_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ action.tbl_start() }}
    {{ action.tbl_tr('Nombres' |gtrans,usuario.fullName) }}
    {{ action.tbl_tr('Usuario'|gtrans,usuario.username) }}
    {{ action.tbl_tr('Correo'|gtrans,usuario.email) }}
    <tr>
        <th>Roles</th>
        <td>
            {% for rol in usuario.roles %}
                {{ rol }},
            {% endfor %}
        </td>
    </tr>
    {% include 'crud/_show_info.html.twig' with {'entity': usuario} %}
    {{ action.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'usuario','entity': usuario} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'usuario','entity': usuario} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'usuario','entity': usuario} %}
{% endblock %}