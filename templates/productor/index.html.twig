{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/pagination.html.twig' as pagination %}

{% set _title = 'Productor' %}
{% set _main_title = 'Listado' %}
{% set _section =  'productor_index' %}

{% block _breadcrumb %}
    {{ breadcrumb.show(_title) }}
{% endblock %}

{% block _main %}
    {{ pagination.pager(paginator, _section) }}
    {% embed 'theme/_table.html.twig' %}
        {% block table_head %}
            {% import 'theme/action.html.twig' as action %}
            {% import '@App/theme1/table.html.twig' as table %}

            <tr>
                {{ table.th('#') }}
                {{ table.th('Datos', true, 'd-block d-sm-none') }}
                {{ table.th('Codigo', true, 'd-none d-sm-table-cell') }}
                {{ table.th('Nombre', true, 'd-none d-sm-table-cell') }}
                {{ table.th('Parcelas', true, 'd-none d-sm-table-cell') }}
                {{ table.th('Activo', true, 'd-none d-sm-table-cell text-center') }}
                <th></th>
            </tr>
        {% endblock %}
        {% block table_body %}
            {% import 'theme/action.html.twig' as action %}
            {% import '@App/theme1/table.html.twig' as table %}

            {% for productor in paginator.results %}
                <tr>
                    <td class="text-center">{{ loop.index | index (paginator)}}</td>
                    <td class="d-block d-sm-none">
                        <table class="table gs-0 gy-0">
                            {{ table.tbl_tr_th_td('Codigo', productor.codigo) }}
                            {{ table.tbl_tr_th_td('Nombre', productor.nombre) }}
                            {{ table.tbl_tr_th_td('Activo', productor.isActive  | yesno_custom) }}
                        </table>
                    </td>
                    <td class="d-none d-sm-table-cell">{{ productor.codigo }}</td>
                    <td class="d-none d-sm-table-cell">{{ productor.nombre }}</td>
                    <td class="d-none d-sm-table-cell">
                        <table class="table table-sm mb-0">
                            {% for parcela in productor.parcelas %}
                                <tr>
                                    <td>{{ parcela.sector }}</td>
                                    <td>{{ parcela.codigo }}</td>
                                    <td>{{ parcela.areaBanano }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    </td>
                    <td class="d-none d-sm-table-cell text-center">{{ productor.isActive | yesno_custom | raw }}</td>
                    <td class="">
                        <div class="float-end">
                            {% if access.has('show', productor) %}
                                {{ action.btn_show_link2_ico(path('productor_show', {'id': productor.id})) }}
                            {% endif %}
                            {% if access.has('edit', productor) %}
                                {{ action.btn_edit_link2_ico(path('productor_edit', {'id': productor.id})) }}
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No hay registros</td>
                </tr>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    {{ pagination.show(paginator, _section) }}
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_index_links.html.twig' with {'route_base': 'productor'} %}
{% endblock%}

{% block _body_tools %}
    {% include 'crud/_index_links_ico.html.twig' with {'route_base': 'productor'}  %}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/crud/list.js') }}"></script>
    <script>
        $(document).ready(function () {
            CRUDList.init('{{ path('productor_index') }}');
        });
    </script>
{% endblock %}
