{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Productor' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'productor_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
    {{ table.tbl_tr('Codigo',productor.codigo) }}
    {{ table.tbl_tr('Nombre',productor.nombre) }}
    <tr>
        <th>Parcelas</th>
        <td>
            {% for parcela in productor.parcelas %}
                <div class="row">
                    <div class="col">{{ parcela.codigo }}</div>
                    <div class="col">{{ parcela.sector }}</div>
                    <div class="col">{{ parcela.areaBanano }}</div>
                </div>
            {% endfor %}
        </td>
    </tr>
    {% include 'crud/_show_info.html.twig' with {'entity': productor} %}
    {{ table.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'productor','entity': productor} %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'productor','entity': productor} %}
{% endblock %}
