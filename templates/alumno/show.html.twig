{% extends 'base.html.twig' %}
{% import '@App/theme1/breadcrumb.html.twig' as breadcrumb %}
{% import '@App/theme1/table.html.twig' as table %}

{% set _title = 'Alumno' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'alumno_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ table.tbl_start() }}
        {{ table.tbl_tr('Padre',alumno.parent) }}
        {{ table.tbl_tr('Nombre',alumno.name) }}
        {{ table.tbl_tr('Alias',alumno.alias) }}
        {{ table.tbl_tr('Valor',alumno.value) }}
        {% include 'crud/_show_info.html.twig' with {'entity': alumno} %}
    {{ table.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'alumno','entity': alumno} %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'alumno','entity': alumno} %}
{% endblock %}
